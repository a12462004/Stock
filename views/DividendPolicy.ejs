<!DOCTYPE html>
<html lang="en">
<%- include header.ejs %> 
  <body>
    <%- include content_head.ejs %> 
    <div class="container-fluid">
      <div class="row">
        <%- include sidebar.ejs %> 
          <div class=col-sm-10>
            <div id="upper_row" class="row">
            <div class="col-xs-6 " >
              <img src="../images/poya.png" class=" img-circle" style="float:right;width:300px; height:300;" >
            </div>  
            <div class="col-xs-6 " style="height:200px;width:400px;text-align:left;">
              <h3 class="valign">
              <%= data[0].code %>
              <br/><br/><%= data[0].company %>
              </h3>
            </div>
          </div>
          </div>
          <div class=col-sm-10>
            <div id="main" style="height:400px;"></div>
          </div>
          <div class="col-sm-10">
            <div id="sencondTitle">
              <h2 class="page-header" >股利政策</h2>
            </div>
            <div class="table-responsive">
              <table class="table table-striped table-bordered" style="width:100%;font-size: 20px">
                <thead>
                  <th class="warning">年度</th>
                  <th class="warning">現金股利</th>
                  <th class="warning">股票股利</th>
                  <th class="warning">盈配</th>
                  <th class="warning">積配</th>
                </thead>
                <tbody>
                  <% for(var i=0; i<data.length; i++) {%>
                    <tr>
                      <td>
                        <%= data[i].date%>
                      </td>
                      <td>
                        <%= data[i].cash_dividend%>
                      </td>
                      <td>
                        <%= data[i].stock_dividend%>
                      </td>
                      <td>
                        <%= data[i].surplus%>
                      </td>
                      <td>
                        <%= data[i].plot%>
                      </td>
                    </tr>
                  <% } %>
                </tbody>
              </table>
            </div>
          </div>
        </div> 
        </div>
      </div>
    </div>
  <script src="http://echarts.baidu.com/build/dist/echarts.js"></script>
  <script type="text/javascript">
    $.ajax({
            url: '/DividendPolicy/getChartData',
            type: 'POST',
            dataType: 'JSON',
            data:{code:<%= data[0].code %>},
            success: function(ChartData) {
              var year = [];
              var cash = [];
              var stock = [];
              for (var i = 0; i < ChartData.length; i++) {
                year.push(ChartData[i].year);
                cash.push(ChartData[i].cash_dividend);
                stock.push(ChartData[i].stock_dividend);
              }
              require.config({
                paths: {
                  echarts: 'http://echarts.baidu.com/build/dist'
                }
              });
              require(
              [
                'echarts',
                'echarts/chart/bar'
              ],
              function (ec) {
                var myChart = ec.init(document.getElementById('main')); 
                var option = {
                    tooltip : {
                        trigger: 'axis',
                        axisPointer : {            // 坐标轴指示器，坐标轴触发有效
                            type : 'shadow'        // 默认为直线，可选为：'line' | 'shadow'
                        }
                    },
                    legend: {
                        data:['現金股利','股票股利']
                    },
                    grid: {
                        left: '3%',
                        right: '4%',
                        bottom: '3%',
                        containLabel: true
                    },
                    xAxis : [
                        {
                            type : 'category',
                            data : year
                        }
                    ],
                    yAxis : [
                        {
                            type : 'value',
                            name:'元',
                            axisLabel:{formatter:'{value}'}
                        }
                    ],
                    series : [
                        {
                            name:'股票股利',
                            type:'bar',
                            itemStyle: {normal: {color:'rgba(250,70,100,1)', label:{show:true}}},
                            barWidth : 70,
                            stack: '股利',
                            
                            data: stock
                        },
                        {
                            name:'現金股利',
                            type:'bar',
                            itemStyle: {normal: {color:'rgba(70,180,120,1)', label:{show:true,formatter:function(p){return p.value > 0 ? (p.value +'\n'):'';}}}},
                            stack: '股利',
                            data: cash
                        }
                    ]
                  };
                myChart.setOption(option); 
             });
            }
          });
  </script>
  </body>
</html>
