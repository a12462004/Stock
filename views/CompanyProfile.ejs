<!DOCTYPE html>
<html lang="en">
<%- include header.ejs %> 
  <body>
    <%- include content_head.ejs %> 
    <div class="container-fluid">
      <div class="row">
        <%- include sidebar.ejs %> 

        <div class="text-center" >
          <div class=col-sm-10 style="background-color: #f8f8fa;opacity: 0.9;">
            <div id="upper_row" class="row">
            <div class="col-xs-10 " >
              <ul class="nav navbar-nav navbar-left"  align="left" style="padding-left: 10px;">
            
                    
                    <header >
                      <h2 class="page-title">
                          <img src="../images/logo_inside.png" style="width: 70px;height: 60px;"><% for(var i=0; i<data.length; i++) {%>
                          <%= data[i].company %>
                          <span></span>(<%= data[i].code %>)
                        <% } %></h2>
                    </header>
              </ul>
                    <div style="padding-left: 10px;">
              <table class='table borderless' style="width:100%;font-size: 18px;border-top:3px #5f9ea0 solid;border-bottom:3px #5f9ea0 solid;" cellpadding="10" border='0'>
                <thead>
                     <% for(var i=0; i<data.length; i++) {%>
                  <tr>
                    <td>股價</td>
                    <td>漲跌</td>
                    <td>漲幅</td>
                    <td>成交量</td>
                    <td>股本(百萬)</td>
                    <td>產業</td>
                    <td>發行權證檔數</td>
                  </tr>
                  <tr>
                    <td><%= data[i].up %></td>
                    <td><%= data[i].code %></td>
                    <td><%= data[i].code %></td>
                    <td><%= data[i].code %></td>
                    <td><%= data[i].code %></td>
                    <td><%= data[i].code %></td>
                    <td><%= data[i].code %></td>
                  </tr>
                  <% } %>
                  </thead>
              </table>
                     
              <!-- <img src="../images/taiwancement.png" class="img-circle" style="float:right;width:300px; height:300;" > -->             
            </div>  
            </div>
            <div class="col-xs-2 " style="height:200px;width:100px;text-align:center;">
              <div id="upper_row_right" class="row" style="height:200px;width:380px;text-align:center;">
                <!-- <div class="col-sm-5" style="height:150px;width:100px;text-align:center;">
                  <h3 class="valign">
                  <% for(var i=0; i<data.length; i++) {%>
                  <%= data[i].code %>
                  <br/><br/><%= data[i].company %>
                  <% } %>
                  </h3>
                </div> -->
                <div class="col-sm-1" style="padding-top: 100px;padding-left: 30px;">
                  <button type="button" class="btn btn-info" style="font-size: 20px;" onclick="Collection('add',<%= data[0].code %>);"><span class="glyphicon glyphicon-heart-empty"></span> 加入收藏</button>
                </div>              
              </div>
            </div>
          </div>
          </div>

          <div>
            <div id="sencondTitle" class="col-sm-10">
              <h2 class="page-header" >公司基本資料</h2>
            </div>
            <div class="table-responsive col-sm-10">
              <table class="table table-striped table-bordered" style="width:100%;font-size: 20px">
                <thead>
                <% for(var i=0; i<data.length; i++) {%>
                  <tr>
                    <th class="warning">證期會代碼</th>
                    <td><%= data[i].code %></td>
                    <th class="warning">公司名稱</th>
                    <td><%= data[i].company %></td>
                  </tr>
                  <tr>
                    <th class="warning">上市別</th>
                    <td><%= data[i].listed_type %></td>
                    <th class="warning">員工人數</th>
                    <td><%= data[i].employees %></td>
                  </tr>
                  <tr>
                    <th class="warning">產業類別編號</th>
                    <td><%= data[i].industry %></td>
                    <th class="warning">會計月份</th>
                    <td><%= data[i].accounting %></td>
                  </tr>
                  <tr>
                    <th class="warning">統一編號 </th>
                    <td><%= data[i].tax %></td>
                    <th class="warning">國際證券編號</th>
                    <td><%= data[i].isin %></td>
                  </tr>
                  <tr>
                    <th class="warning">電話</th>
                    <td><%= data[i].telephone %></td>
                    <th class="warning">傳真</th>
                    <td><%= data[i].fax %></td>
                  </tr>
                  <tr>
                    <th class="warning">網址</th>
                    <td><%= data[i].website %></td>
                    <th class="warning">電子信箱</th>
                    <td><%= data[i].e_mail %></td>
                  </tr>
                  <tr>
                    <th class="warning">董事長</th>
                    <td><%= data[i].chairman %></td>
                    <th class="warning">總經理</th>
                    <td><%= data[i].general %></td>
                  </tr>
                  <tr>
                    <th class="warning">發言人</th>
                    <td><%= data[i].spokes %></td>
                    <th class="warning">財務經理</th>
                    <td><%= data[i].controller %></td>
                  </tr>
                  <tr>
                    <th class="warning">員工人數</th>
                    <td><%= data[i].employees %></td>
                    <th class="warning">實收資本額(元)</th>
                    <td><%= data[i].capital %></td>
                  </tr>
                  <tr>
                    <th class="warning">設立日期</th>
                    <td colspan="4"><%= data[i].founded %></td> 
                  </tr>
                  <tr>
                    <th class="warning">上市日期</th>
                    <td colspan="4"><%= data[i].listed_date %></td>
                  </tr>
                    

                <% } %>
                </thead>
              </table>
            </div>
          </div>
        </div>

        </div> 
        </div>
      </div>
    </div>
    <script type="text/javascript">
      function Collection(act,code) {
        // alert(act);
         $.ajax({
                  type: 'POST',
                  url: 'CompanyProfile/conllection',
                  data: {act: act,code:code},
                   success: function (msg) { //成功收藏後接受到訊息，印出來
                        alert(msg);
                    }
              });
      }
    </script>
  </body>
</html>
